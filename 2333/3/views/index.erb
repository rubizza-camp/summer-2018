<div>
  <br>
  <h1 align='center'>Article rating table</h1>
</div>
<div>
  <table class='table'>
    <thead>
      <tr>
        <th scope="col">â„–</th>
        <th scope="col">Link</th>
        <th scope="col">Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each_with_index do |article, index| %>
      <tr>
        <td><%=(index+1).to_s%></td>
        <td><a href="articles/<%=article.id%>"><%=article.link%></a></td>
        <td><%=article.rating.to_s%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
