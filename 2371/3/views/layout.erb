<!doctype html>
<html lang="en">
<head>
  <title>Articles</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body>
<div class="container">

  <nav class="navbar navbar-light" >
    <a class="navbar-brand" href="/articles"><h2>Articles</h2></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active" method='post'>
          <form action='/new' method='get'>
            <button type='submit' id='hidden' name='_method' value='get' class='btn btn-outline-dark btn-lg btn-block' >Add article</button>
          </form>
          <form action='/articles' method='post'>
            <button type='submit' id='hidden' name='_method' value='delete' class='btn btn-outline-dark btn-lg btn-block' onclick="return confirm('Are you sure you want to delete all articles? The changes are irreversible.')">Delete all</button>
          </form>
          <!--<a class="nav-link" href="/new">Add article<span class="sr-only">(current)</span></a>-->
          <!--<a class="nav-link" href="/delete_all">Delete all<span class="sr-only">(current)</span></a>-->
        </li>
      </ul>
    </div>
  </nav>

  <div>
    <%if @error then %>
      <div class="alert alert-error"><%=@error%></div>
    <% end %>

    <%= yield %>
  </div>

</div>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>